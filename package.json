{
  "name": "todolist-electron",
  "version": "1.0.4",
  "productName": "Todolist Electron",
  "description": "Todo list developed in javascript with Node JS & Electron",
  "main": "app/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "test": "jshint --reporter=reporter.js --exclude=app/assets/js/vendor/ app",
    "start": "electron . --enable-logging",
    "build": "npm run build-assets && npm run build-app",
    "build-app": "electron-builder --mac --win --ia32 --x64",
    "build-assets": "gulp scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deathart/todolist-electron.git"
  },
  "keywords": [
    "todo",
    "todolist",
    "electron",
    "node",
    "nodejs",
    "javascript"
  ],
  "author": "deathart",
  "copyright": "©deathart",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/deathart/todolist-electron/issues"
  },
  "homepage": "https://github.com/deathart/todolist-electron#readme",
  "build": {
    "appId": "todolist.electron",
    "copyright": "© deathart",
    "asar": false,
    "productName": "Todolist Electron",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "backgroundColor": "#cdcdcd"
    },
    "linux": {
      "maintainer": "deathart",
      "category": "Utility",
      "description": "Todo list developed in javascript with Node JS & Electron",
      "packageCategory": "Utility",
      "target": [
        "deb",
        "rpm",
        "zip"
      ]
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ]
    },
    "files": [
      "node_modules",
      "app",
      "reporter.js",
      "package.json",
      "LICENSE"
    ],
    "directories": {
      "output": "./releases"
    }
  },
  "dependencies": {
    "electron-debug": "^1.5.0",
    "electron-settings": "^3.1.4",
    "electron-updater": "^2.21.8",
    "electron-window-state": "^4.1.1",
    "handlebars": "^4.0.11",
    "i18n": "^0.8.3",
    "jquery": "^3.3.1",
    "lowdb": "^1.0.0",
    "moment": "^2.22.0"
  },
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-builder": "^20.8.2",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^5.0.0",
    "gulp-csscomb": "^3.0.8",
    "gulp-load-plugins": "^1.5.0",
    "gulp-sass": "^3.2.1",
    "jshint": "^2.9.5",
    "jshint-stylish": "^2.2.1",
    "jshint-stylish-summary": "^0.1.2"
  }
}
