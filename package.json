{
    "name": "todolist-electron",
    "version": "1.0.2",
    "productName": "Todolist Electron",
    "description": "Todo list developed in javascript with Node JS & Electron",
    "main": "app/main.js",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "test": "jshint --reporter=reporter.js --exclude=app/assets/js/vendor/ app",
        "start": "electron .",
        "build-win": "electron-builder --win --ia32 --x64"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/deathart/todolist-electron.git"
    },
    "keywords": [
        "todo",
        "todolist",
        "electron",
        "node",
        "nodejs",
        "javascript"
    ],
    "author": "deathart",
    "copyright": "©deathart",
    "license": {
        "type": "GPL-3.0",
        "url": "https://github.com/deathart/todolist-electron/blob/master/LICENSE"
    },
    "bugs": {
        "url": "https://github.com/deathart/todolist-electron/issues"
    },
    "homepage": "https://github.com/deathart/todolist-electron#readme",
    "build": {
        "appId": "todolist.electron",
        "copyright": "© deathart",
        "asar": false,
        "productName": "Todolist Electron",
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "dmg": {
            "backgroundColor": "#cdcdcd"
        },
        "linux": {
            "maintainer": "deathart",
            "category": "Utility",
            "description": "Todo list developed in javascript with Node JS & Electron",
            "packageCategory": "Utility",
            "target": [
                "deb",
                "rpm",
                "zip"
            ]
        },
        "win": {
            "target": [
                "zip",
                "nsis"
            ]
        },
        "files": [
            "node_modules",
            "app",
            "reporter.js",
            "package.json",
            "LICENSE"
        ],
        "directories": {
            "output": "./releases"
        }
    },
    "dependencies": {
        "electron-debug": "^1.4.0",
        "electron-settings": "^3.1.1",
        "electron-updater": "^2.8.7",
        "electron-window-state": "^4.1.1",
        "handlebars": "^4.0.10",
        "i18n": "^0.8.3",
        "jquery": "^3.2.1",
        "lowdb": "^0.17.2",
        "moment": "^2.18.1"
    },
    "devDependencies": {
        "electron": "^1.7.6",
        "electron-builder": "^19.27.0",
        "gulp": "^3.9.1",
        "gulp-autoprefixer": "^4.0.0",
        "gulp-csscomb": "^3.0.8",
        "gulp-load-plugins": "^1.5.0",
        "gulp-sass": "^3.1.0",
        "jshint": "^2.9.5",
        "jshint-stylish": "^2.2.1",
        "jshint-stylish-summary": "^0.1.2"
    }
}
